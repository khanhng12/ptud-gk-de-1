	<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/daterangepicker/moment.min.js"></script>
	<script src="/vendor/daterangepicker/daterangepicker.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/countdowntime/countdowntime.js"></script>
	<!--===============================================================================================-->
	<script src="/js/main.js"></script>

</body>

</html>

<script>
	$(document).ready(function () {
		//Lưu thông tin đăng nhập vào localstorage
		$('.lgn-btn').click(function () {
			var checked = $('#ckb1').prop('checked');
			if (checked) {
				var username = $('#username').prop('value');
				var password = $('#pass').prop('value');

				localStorage.setItem('username', username);
				localStorage.setItem('password', password);
			}
			localStorage.setItem('rememberme',checked);
		});

		if(localStorage.rememberme=='true'){
			$('#ckb1').prop('checked',true);
		}
		else{
			$('#ckb1').removeProp('checked');
		}

		var checked = $('#ckb1').prop('checked');
		if (checked) {
			//Điền thông tin vào fields
			$('#username').prop('value', localStorage.getItem('username'));
			$('#pass').prop('value', localStorage.getItem('password'));
		}
	})
</script>