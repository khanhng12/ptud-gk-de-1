<script>
    var input = document.getElementById('input');

    input.addEventListener('keyup', function (event) {
        if (event.keyCode === 13) {
            // Cancel the default action, if needed
            event.preventDefault();
            window.location.href = '/search/'+ input.value.trim();
        }
    })
</script>